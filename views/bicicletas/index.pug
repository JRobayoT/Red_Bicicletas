extends ../layout

block content
    .container
        .row.mb-3
            .col
                a.btn.btn-primary.mr-2(href='bicicletas/create') Nueva Bicicleta
                a.btn.btn-secondary(href='/') Volver
        table.table.table-striped
            thead
                tr
                    th(scope='col') #
                    th(scope='col') Color
                    th(scope='col') Modelo
                    th(scope='col') Ubicacion
                    th(scope='col') 
                    th(scope='col')
            tbody
                each bici in bicis 
                    tr
                        th(scope='row')
                          = bici.code
                        td= bici.color
                        td= bici.modelo 
                        td= bici.ubicacion
                        td
                            a.btn.btn-info(href = 'bicicletas/' + bici.id + '/show') Ver
                        td
                            a.btn.btn-warning(href = 'bicicletas/' + bici.id + '/update') Editar
                        td 
                            form.d-inline(method='post' action="bicicletas/" + bici.id + '/delete')
                                input(type="hidden" name='id' value= bici.id)
                                button.btn.btn-danger(type='submit' name='submit_param' value='submit_value') Eliminar
