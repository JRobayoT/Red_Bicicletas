extends ../layout

block content
    .container
        a.btn.btn-secondary(href='/bicicletas') Volver

        .my-4

        h1 Actualizando Bicicleta

        .my-4

        form
            .form-group
                label(for='code') Code:
                input#code.form-control(type="text" name='code' value=bici.code)
            .form-group
                label(for='color') Color:
                input#color.form-control(type="text" name='color' value=bici.color)
            .form-group
                label(for='modelo') Modelo:
                input#modelo.form-control(type="text" name='modelo' value=bici.modelo)
            .form-group
                label(for='lat') Latitud:
                input#lat.form-control(type="text" name='lat' value=bici.ubicacion[0])
            .form-group
                label(for='lng') Longitud:
                input#lng.form-control(type="text" name='lng' value=bici.ubicacion[1])
            button.btn.btn-primary(type="submit") OK
